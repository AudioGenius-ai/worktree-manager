{
  "permissions": {
    "allow": [
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(./scripts/*)",
      "Bash(ls:*)",
      "Bash(pwd:*)",
      "Bash(cat:*)",
      "Bash(find:*)",
      "Bash(grep:*)",
      "Bash(mkdir:*)",
      "Bash(rm:*)",
      "Bash(mv:*)",
      "Bash(cp:*)",
      "Bash(chmod:*)",
      "Bash(echo:*)",
      "Bash(cd:*)",
      "Bash(npm:*)",
      "Bash(npx:*)",
      "Bash(node:*)",
      "Bash(pnpm:*)",
      "Bash(yarn:*)",
      "Bash(bun:*)",
      "Bash(cargo:*)",
      "Bash(go:*)",
      "Bash(python:*)",
      "Bash(pip:*)",
      "Bash(pytest:*)",
      "Bash(make:*)",
      "Read",
      "Write",
      "Edit",
      "mcp__worktree__git_init_repo",
      "mcp__worktree__git_list_repos",
      "mcp__worktree__git_create_worktree",
      "mcp__worktree__git_list_worktrees",
      "mcp__worktree__git_remove_worktree",
      "mcp__worktree__git_sync",
      "mcp__worktree__git_worktree_status",
      "mcp__worktree__git_commit",
      "mcp__worktree__git_push",
      "mcp__worktree__git_pull",
      "mcp__worktree__git_reset",
      "mcp__worktree__github_*",
      "mcp__worktree__task_*",
      "mcp__worktree__req_*",
      "mcp__codex-cli__codex",
      "mcp__gemini-cli__ask-gemini"
    ],
    "deny": []
  },
  "enableAllProjectMcpServers": true,
  "hooks": {
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-completion-gate.js",
            "timeout": 30
          }
        ]
      }
    ],
    "SubagentStop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-completion-gate.js",
            "timeout": 30
          }
        ]
      }
    ],
    "SessionStart": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/session-task-reminder.js",
            "timeout": 10
          }
        ]
      }
    ],
    "PreToolUse": [
      {
        "matcher": "Bash",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/dangerous-command-blocker.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__worktree__git_create_worktree",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/workflow-task-tracking.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/requirement-enforcement.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__worktree__git_init_repo",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/requirement-enforcement.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__worktree__task_complete",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/task-complete-blocker.js",
            "timeout": 10
          }
        ]
      }
    ],
    "PostToolUse": [
      {
        "matcher": "Edit|Write",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/workflow-task-tracking.js",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__worktree__task_code_complete",
        "hooks": [
          {
            "type": "command",
            "command": "node \"$CLAUDE_PROJECT_DIR\"/.claude/hooks/quality-gate-trigger.js",
            "timeout": 10
          }
        ]
      }
    ],
    "Notification": [
      {
        "matcher": "*",
        "hooks": [
          {
            "type": "command",
            "command": "if command -v osascript >/dev/null 2>&1; then osascript -e 'display notification \"Input required\" with title \"Claude Code\" sound name \"Ping\"'; elif command -v notify-send >/dev/null 2>&1; then notify-send -u critical 'Claude Code' 'Input required'; fi",
            "timeout": 5
          }
        ]
      }
    ]
  }
}
